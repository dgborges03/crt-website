   {
     title: "Combat Robotics",
     desc: "Designing and building 1lb and 3lb combat robots, with the goal of creating a collegiate league among nearby socal universities",
     image: "/project-imgs/combat-robot.jpg",
    //  link: "#"
   },
   {
    title: "Motorized Couch",
    desc: "A fully drivable and autonomous couch that combines playful engineering and serious drivetrain design for campus events and outreach.",
    image: "/project-imgs/moto-couch.jpg",
    // link: "#",
  },
  {
    title: "CCBR Quadruped",
    desc: "An open-source legged robotics collaboration between Caltech, Columbia, Berkeley, and Rutgers. Exploring quadruped locomotion and control.",
