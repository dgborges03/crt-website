---
import "../styles/global.css";
---
<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="crt-logo.png" />
    <!-- Creative, slightly retro fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Press+Start+2P&family=Inter:wght@400;600;700&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>Caltech Robotics Team (CRT)</title>
    <meta
      name="description"
      content="Caltech Robotics Team (CRT) — projects, team, sponsors, gallery, and contact."
    />
  </head>

  <body class="bg-zinc-950 text-zinc-100 antialiased font-body">
    <!-- Header -->
    <header class="w-full sticky top-0 z-50 bg-zinc-950/80 backdrop-blur supports-[backdrop-filter]:bg-zinc-950  border-b border-white/5">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="flex h-16 items-center justify-between">
          <a href="/" class="flex items-center gap-3">
            <img src="crt-logo.png" alt="CRT logo" class="h-12 w-12" />
            <span class="text-2xl font-display tracking-wider">CRT</span>
          </a>

          <nav class="hidden md:flex items-center gap-6 font-body text-xl">
            <a href="/projects" class="hover:text-orange-400 transition">Projects</a>
            <a href="/team" class="hover:text-orange-400 transition">Team</a>
            <a href="/about" class="hover:text-orange-400 transition">About</a>
            <a href="/sponsors" class="hover:text-orange-400 transition">Sponsors</a>
            <a href="/gallery" class="hover:text-orange-400 transition">Gallery</a>
          </nav>

          <div class="hidden md:block">
            <a
              href="/contact"
              class="inline-flex items-center rounded-2xl bg-orange-500/90 px-4 py-2 font-display text-zinc-900 hover:bg-orange-400 focus:outline-none focus:ring-2 focus:ring-orange-500/60"
            >
              Contact
            </a>
          </div>

          <!-- Mobile menu (no JS needed) -->
          <details class="md:hidden relative">
            <summary class="list-none flex items-center justify-center h-10 w-10 rounded-xl border border-white/10 hover:border-white/20">
              <span class="sr-only">Open menu</span>
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" class="h-5 w-5">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
              </svg>
            </summary>
            <div class="absolute right-0 mt-2 w-56 overflow-hidden rounded-2xl border border-white/10 bg-zinc-900 shadow-2xl">
              <a href="/projects" class="block px-4 py-3 hover:bg-white/5">Projects</a>
              <a href="/team" class="block px-4 py-3 hover:bg-white/5">Team</a>
              <a href="/about" class="block px-4 py-3 hover:bg-white/5">About</a>
              <a href="/sponsors" class="block px-4 py-3 hover:bg-white/5">Sponsors</a>
              <a href="/gallery" class="block px-4 py-3 hover:bg-white/5">Gallery</a>
              <a href="/contact" class="block px-4 py-3 text-orange-400 hover:bg-white/5">Contact</a>
            </div>
          </details>
        </div>
      </div>

      <!-- Robots running along the bottom of the header -->
      <div aria-hidden="true" class="relative w-full h-8">
        <div class="robot r1 !bottom-0"></div>
        <div class="robot r2 !bottom-0"></div>
      </div>
    </header>

    <main>
      <slot />
    </main>

    <!-- Footer -->
    <footer class="border-t border-white/5">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-10">
        <div class="flex flex-col sm:flex-row items-center justify-between gap-6">
          <p class="text-sm text-zinc-400">
            © 2025 Caltech Robotics Team
          </p>
          <div class="flex items-center gap-4">
            <a aria-label="YouTube" href="https://www.youtube.com/@CaltechRoboticsTeam" target="_blank" rel="noreferrer" class="hover:text-orange-400">
              <svg viewBox="0 0 24 24" class="h-5 w-5" fill="currentColor" aria-hidden="true">
                <path d="M23.499 6.203a3.005 3.005 0 0 0-2.116-2.127C19.477 3.5 12 3.5 12 3.5s-7.477 0-9.383.576A3.005 3.005 0 0 0 .5 6.203 31.37 31.37 0 0 0 0 12a31.37 31.37 0 0 0 .5 5.797 3.005 3.005 0 0 0 2.116 2.127C4.523 20.5 12 20.5 12 20.5s7.477 0 9.383-.576a3.005 3.005 0 0 0 2.116-2.127A31.37 31.37 0 0 0 24 12a31.37 31.37 0 0 0-.501-5.797ZM9.75 15.5v-7l6 3.5-6 3.5Z" />
              </svg>
            </a>
            <a aria-label="Instagram" href="https://www.instagram.com/caltechrobotics/" target="_blank" rel="noreferrer" class="hover:text-orange-400">
              <svg viewBox="0 0 24 24" class="h-5 w-5" fill="currentColor" aria-hidden="true">
                <path d="M7 2h10a5 5 0 0 1 5 5v10a5 5 0 0 1-5 5H7a5 5 0 0 1-5-5V7a5 5 0 0 1 5-5Zm0 2a3 3 0 0 0-3 3v10a3 3 0 0 0 3 3h10a3 3 0 0 0 3-3V7a3 3 0 0 0-3-3H7Zm5 3.5A5.5 5.5 0 1 1 6.5 13 5.5 5.5 0 0 1 12 7.5Zm0 2A3.5 3.5 0 1 0 15.5 13 3.5 3.5 0 0 0 12 9.5Zm5.75-2.75a1 1 0 1 1-1 1 1 0 0 1 1-1Z" />
              </svg>
            </a>
            </a>
          </div>
        </div>
      </div>
    </footer>

    <!-- Global helpers & robot styles -->
    <style is:global>
      :root { --crt-orange: 255 111 0; }
      .font-display { font-family: 'Press Start 2P', monospace; }
      .font-body { font-family: 'Inter', system-ui, sans-serif; }
      ::selection { background: rgb(var(--crt-orange) / 0.25); }

      /* Tiny robots that "walk" across the bottom of the header */
      .robot {
        position: absolute; bottom: 10%;
        width: 28px; height: 28px;
        background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="1.5"><rect x="5" y="6" width="14" height="10" rx="2" fill="%23FF6F00" stroke="%23FF6F00"/><circle cx="10" cy="11" r="1.2" fill="white"/><circle cx="14" cy="11" r="1.2" fill="white"/><path d="M12 4v2M7 18l2-2M17 18l-2-2" stroke="white"/></svg>') no-repeat center/contain;
        opacity: .85;
        filter: drop-shadow(0 2px 6px rgba(255,111,0,.35));
        animation: walkX 26s linear infinite, bob 1.6s ease-in-out infinite;
      }
      .robot.r1 { left: -40px; animation-duration: 24s, 1.4s; animation-delay: 0s, 0s; }
      .robot.r2 { left: -60px; bottom: 22%; transform: scale(.9); animation-duration: 32s, 1.7s; animation-delay: 4s, .2s; opacity: .75; }
      .robot.r3 { left: -80px; bottom: 16%; transform: scale(1.15); animation-duration: 28s, 1.3s; animation-delay: 8s, .1s; opacity: .9; }

      @keyframes walkX { to { transform: translateX(calc(100vw + 160px)); } }
      @keyframes bob   { 0%,100%{ translate: 0 0;} 50%{ translate: 0 -2px;} }

      @media (prefers-reduced-motion: reduce) {
        .robot { display: none; }
      }
    </style>
  </body>
</html>